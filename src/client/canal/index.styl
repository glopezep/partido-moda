.Canals
  background-color #163017
  color white
  font-family arial

  &-top
    padding 1em
    display block
    text-align center

  &-logo
    display inline-block
    vertical-align middle
    margin-right 1.5em

  &-text
    display inline-block
    width 40%
    text-align left
    vertical-align middle
    font-size 1.2em

  &-bottom
    display block

  &-container
    padding 1em
    margin 0
    display flex
    flex-flow row wrap
    justify-content space-around

  &-option
    list-style none
    margin .5em
    a
      transition all .1s ease-out
      display inline-block

      &:hover
        box-shadow 0 0 10px white

  &-image
    width 100px
    height 76px
