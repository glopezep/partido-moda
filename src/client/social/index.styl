.Socials
  color white
  font-size 1em
  &.is-fixed
    position: fixed
    bottom: 0
    width: 100%
    z-index: 10
    transition all .3s ease
  &-list
    text-align center
    display flex
    margin 0
    padding 0
    list-style none
.Social
  &-label
    margin-left 1em
  &-link
    color white
    text-decoration none
    position absolute
    top 0
    right 0
    bottom 0
    left 0
  &--facebook
    background #3b5998
    padding 1em
    width 50%
    position relative
    text-transform uppercase
    transition all .2s ease
    &:hover
      background #0a2336
  &--twitter
    background #4099FF
    padding 1em
    width 50%
    position relative
    text-transform uppercase
    transition all .2s ease
    &:hover
      background #0a2336
.icon-facebook, .icon-twitter
  font-size 1.5em
@media only screen and (max-width: 700px)
  .Socials
    &-list
      display block
  .Social
    &--facebook, &--twitter
      width 100%
